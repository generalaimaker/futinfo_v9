rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 기본 규칙: 모든 문서에 대한 접근 거부
    match /{document=**} {
      allow read, write: if false;
    }
    
    // apiCache 컬렉션: 읽기는 모든 사용자에게 허용, 쓰기는 인증된 사용자에게만 허용
    match /apiCache/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
